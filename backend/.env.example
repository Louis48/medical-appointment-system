# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
# DB_TYPE can be 'mysql' or 'postgres'
DB_TYPE=mysql
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=medical_appointments
DB_PORT=3306
DB_SSL=false

# For PostgreSQL (when DB_TYPE=postgres)
# DB_HOST=localhost
# DB_USER=medical_user
# DB_PASSWORD=medical_password
# DB_NAME=medical_appointments
# DB_PORT=5432
# DB_SSL=false

# For Render PostgreSQL (production)
# DB_TYPE=postgres
# DATABASE_URL=postgres://user:password@host:port/database
# DB_SSL=true

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Frontend URL (CORS)
FRONTEND_URL=http://localhost:3000
